<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.ht.mapper.MemberMapper">
  	<insert id="memreg">
		insert into Viviana_member 
		values (#{User_id},#{User_password},#{User_name},#{User_phone},
		#{User_gender},#{User_birth},#{User_interest},#{postnum},#{User_addr1},#{User_addr2},#{User_addr3},
		#{User_marketing_agree}, now());  	
  	</insert>
  	
  	
  	<select id="login" resultType="org.ht.model.MemberVO">
  		select User_id, User_password
  		from Viviana_member
  		where User_id=#{User_id} and User_password=#{User_password}
  	</select>
  	
  	<!-- 아이디 중복체크  -->
  	<select id="idChk" parameterType="String" resultType="boolean">
  		select count(*)
  		from Viviana_member
  		where User_id = #{User_id};
  	</select>
  	
  </mapper>